generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── User & Settings ────────────────────────────────────────────────────────

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  username     String   @unique
  passwordHash String   @map("password_hash")
  isAdmin      Boolean  @default(false) @map("is_admin")
  createdAt    DateTime @default(now()) @map("created_at")

  settings       UserSettings?
  playlists      Playlist[]
  playHistory    PlayHistory[]
  starredTracks  StarredTrack[]
  starredAlbums  StarredAlbum[]
  starredArtists StarredArtist[]

  @@index([email])
  @@index([username])
  @@map("users")
}

model UserSettings {
  userId           String  @id @map("user_id")
  lastfmApiKey     String? @map("lastfm_api_key")
  lastfmApiSecret  String? @map("lastfm_api_secret")
  lastfmUsername    String? @map("lastfm_username")
  lastfmSessionKey String? @map("lastfm_session_key")
  theme            String  @default("dark")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

// ─── Library ────────────────────────────────────────────────────────────────

model Library {
  id            String    @id @default(uuid())
  name          String
  path          String    @unique
  lastScannedAt DateTime? @map("last_scanned_at")

  @@map("libraries")
}

// ─── Artist ─────────────────────────────────────────────────────────────────

model Artist {
  id            String  @id @default(uuid())
  name          String
  sortName      String? @map("sort_name")
  biography     String?
  imageUrl      String? @map("image_url")
  musicbrainzId String? @unique @map("musicbrainz_id")
  externalIds   Json?   @map("external_ids")

  albums         Album[]
  tracks         Track[]
  starredArtists StarredArtist[]

  @@index([name])
  @@index([sortName])
  @@map("artists")
}

// ─── Album ──────────────────────────────────────────────────────────────────

model Album {
  id            String    @id @default(uuid())
  title         String
  artistId      String    @map("artist_id")
  year          Int?
  releaseDate   DateTime? @map("release_date")
  genre         String?
  coverUrl      String?   @map("cover_url")
  musicbrainzId String?   @unique @map("musicbrainz_id")
  totalTracks   Int?      @map("total_tracks")
  totalDiscs    Int?      @default(1) @map("total_discs")
  label         String?
  country       String?
  createdAt     DateTime  @default(now()) @map("created_at")

  artist        Artist         @relation(fields: [artistId], references: [id], onDelete: Cascade)
  tracks        Track[]
  starredAlbums StarredAlbum[]

  @@index([artistId])
  @@index([title])
  @@index([year])
  @@index([genre])
  @@map("albums")
}

// ─── Track ──────────────────────────────────────────────────────────────────

model Track {
  id            String   @id @default(uuid())
  title         String
  albumId       String?  @map("album_id")
  artistId      String   @map("artist_id")
  trackNumber   Int      @default(1) @map("track_number")
  discNumber    Int      @default(1) @map("disc_number")
  duration      Float
  filePath      String   @unique @map("file_path")
  fileSize      BigInt   @map("file_size")
  format        String
  bitrate       Int?
  sampleRate    Int?     @map("sample_rate")
  channels      Int?
  musicbrainzId String?  @unique @map("musicbrainz_id")
  lyrics        String?
  missing       Boolean  @default(false)
  createdAt     DateTime @default(now()) @map("created_at")

  artist         Artist          @relation(fields: [artistId], references: [id], onDelete: Cascade)
  album          Album?          @relation(fields: [albumId], references: [id], onDelete: SetNull)
  playHistory    PlayHistory[]
  playlistTracks PlaylistTrack[]
  starredTracks  StarredTrack[]

  @@index([artistId])
  @@index([albumId])
  @@index([title])
  @@map("tracks")
}

// ─── Play History ───────────────────────────────────────────────────────────

model PlayHistory {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  trackId   String   @map("track_id")
  playedAt  DateTime @default(now()) @map("played_at")
  completed Boolean  @default(false)

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  track Track @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@index([userId, playedAt])
  @@index([trackId])
  @@map("play_history")
}

// ─── Playlist ───────────────────────────────────────────────────────────────

model Playlist {
  id           String    @id @default(uuid())
  name         String
  coverUrl     String?   @map("cover_url")
  userId       String    @map("user_id")
  isPublic     Boolean   @default(false) @map("is_public")
  isPinned     Boolean   @default(false) @map("is_pinned")
  lastPlayedAt DateTime? @map("last_played_at")
  createdAt    DateTime  @default(now()) @map("created_at")

  user   User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracks PlaylistTrack[]

  @@index([userId])
  @@index([isPinned, lastPlayedAt])
  @@map("playlists")
}

model PlaylistTrack {
  id         String @id @default(uuid())
  playlistId String @map("playlist_id")
  trackId    String @map("track_id")
  position   Int

  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  track    Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@unique([playlistId, trackId])
  @@index([playlistId, position])
  @@map("playlist_tracks")
}

// ─── Starred / Favorites ────────────────────────────────────────────────────

model StarredTrack {
  userId    String   @map("user_id")
  trackId   String   @map("track_id")
  starredAt DateTime @default(now()) @map("starred_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  track Track @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@id([userId, trackId])
  @@index([userId])
  @@map("starred_tracks")
}

model StarredAlbum {
  userId    String   @map("user_id")
  albumId   String   @map("album_id")
  starredAt DateTime @default(now()) @map("starred_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  album Album @relation(fields: [albumId], references: [id], onDelete: Cascade)

  @@id([userId, albumId])
  @@index([userId])
  @@map("starred_albums")
}

model StarredArtist {
  userId    String   @map("user_id")
  artistId  String   @map("artist_id")
  starredAt DateTime @default(now()) @map("starred_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  artist Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)

  @@id([userId, artistId])
  @@index([userId])
  @@map("starred_artists")
}
