{
  "name": "musicserver",
  "private": true,
  "scripts": {
    "dev:server": "pnpm --filter @musicserver/server dev",
    "dev:web": "pnpm --filter @musicserver/web dev",
    "dev": "pnpm run --parallel dev:server dev:web",
    "build": "pnpm run -r build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "db:migrate": "pnpm --filter @musicserver/server prisma:migrate",
    "db:generate": "pnpm --filter @musicserver/server prisma:generate",
    "db:studio": "pnpm --filter @musicserver/server prisma:studio"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
